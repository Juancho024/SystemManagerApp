<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".controllers.login.CambiarPasswordFragment">

    <TextView
        android:id="@+id/tvTituloPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:text="Cambiar Contraseña"
        android:textAlignment="center"
        android:textColor="#2C3E50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPass">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Crea una nueva contraseña segura para tu cuenta."
                android:textColor="#78909C" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Contraseña Actual"
                android:textColorHint="#78909C"
                app:boxStrokeColor="#2C3E50"
                app:hintTextColor="#2C3E50"
                app:endIconMode="password_toggle"
                app:endIconTint="#2C3E50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nueva Contraseña"
                android:textColorHint="#78909C"
                app:boxStrokeColor="#2C3E50"
                app:hintTextColor="#2C3E50"
                app:endIconMode="password_toggle"
                app:endIconTint="#2C3E50"
                app:helperText="Mínimo 4 caracteres"
                app:helperTextTextColor="#000000">>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:hintTextColor="#2C3E50"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="Confirmar Nueva Contraseña"
                android:textColorHint="#78909C"
                app:boxStrokeColor="#2C3E50"
                app:hintTextColor="#2C3E50"
                app:endIconMode="password_toggle"
                app:endIconTint="#2C3E50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActualizarPass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Actualizar Contraseña"
                android:textStyle="bold"
                app:backgroundTint="#2C3E50"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>